<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<div>
  <% @messages.each do |message| %>
      <div><%= message.title %></div>
      <div><%= message.content %></div>
      <div><%= message.user %></div>
      <div><%= link_to 'Show', message %></div>
      <div><%= link_to 'Edit', edit_message_path(message) %></div>
      <div>
        <%= form_for ([message, Comment.new]) do |f| %>
          <div class="field">
            <%= f.label :comment_text %>
            <%= f.text_field :comment_text %>
          </div>
          <div class="submit">
            <%= f.submit %>
          </div>
          <% end %>
      </div>
      <div class="retarded">
        <% message.comments.each do |comment| %>
          <div><%= comment.comment_text %></div>
        <% end %>
      </div>
      <div><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  <% end %>
</div>

<br>

